model Recipe {
    id     String       @id @default(cuid())
    name   String
    status RecipeStatus @default(DRAFT)

    image       String?
    description String?
    ingredients Json?
    time        String?
    difficulty  String?
    servings    String?
    method      String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String
}

enum RecipeStatus {
    DRAFT
    PUBLISHED
}
